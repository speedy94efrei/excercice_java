public class Main {
    public static void main(String[] args) {
        // Déclaration et initialisation de la variable str
        String str = "abcdefghijklmnopqrstuvwxyz";

        // Initialisation de la variable i avec la longueur de str - 1
        int i = str.length() - 1;

        // Boucle while pour parcourir la chaîne str en sens inverse
        while (i >= 0) {
            // Affiche le caractère actuel
            System.out.print(str.charAt(i));

            // Décrémente i de 1 pour passer au caractère précédent
            i--;
        }

        System.out.println(); // Pour passer à la ligne après l'affichage
    }
}
